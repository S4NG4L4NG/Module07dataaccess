<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module07dataaccess.MainPage"
             BackgroundColor="#f0f0f0">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,20"
            Spacing="25">

            <StackLayout Orientation="Horizontal" HorizontalOptions="Fill" VerticalOptions="Center">
                <Image Source="icon_person.png" WidthRequest="24" HeightRequest="24" Margin="0,0,10,0"/>
                <Button Text="View Personnel Page"
                        Clicked="PersonelPage"
                        HorizontalOptions="Fill"
                        BackgroundColor="#0056b3"
                        TextColor="White"/>
            </StackLayout>

            <Label x:Name="ConnectionStatusLabel"
                   Text=""
                   FontSize="18"
                   TextColor="Green"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
